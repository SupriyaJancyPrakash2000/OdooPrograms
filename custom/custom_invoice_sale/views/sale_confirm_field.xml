<odoo>
<data>
<record id="sale_order_inherited_form_check" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.new.confirm</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='date_order']" position="after">
            <field name="check_sale_order_confirm"/>
        </xpath>
    </field>
</record>
</data>
</odoo>