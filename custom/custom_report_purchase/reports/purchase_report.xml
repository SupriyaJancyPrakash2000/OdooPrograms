<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_vehicle_order123" model="ir.actions.report">
                <field name="name">purchase Order</field>
                <field name="model">purchase.order</field>
                <field name="report_type">qweb-pdf</field>
                <field name="report_name">custom_report_purchase.report_purchase</field>
                <field name="report_file">custom_report_purchase.report_purchase</field>
                <!-- <field name="print_report_name">'purchase report'</field> -->
                <field name="binding_model_id" ref="purchase.model_purchase_order"/>
                <field name="binding_type">report</field>
    </record>

    <template id="report_purchase">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="custom_report_purchase.purchase_order_custom_report">
                    <t t-set="company" t-value="user.company_id"/>
                  

                    <div class="col-5 mb4">
                        <h6><b>Bill/Invoice-Generated By:</b></h6>
                        <div t-field="property.partner_id"/>
                        <div t-field="company.street"/>
                        <div t-field="company.city"/>
                        <div t-field="company.state_id"/>
                        
                    </div>
                    <div style="float: right;"> 
                        Print date: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>

                    <div class="page">
                        <table width="100%" style="font-size: 18px; ">
                            <thead>
                                <tr>
                                    <th style=" border: 1px solid black; padding-left:100px;" cellpadding="0" cellspacing="0">Product</th>
                                    <th style=" border: 1px solid black; padding-left:100px;" cellpadding="0" cellspacing="0">Quantity</th>
                                    <th style=" border: 1px solid black; padding-left:100px;" cellpadding="0" cellspacing="0">Price Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="property.order_line" t-as="a" >
                                    <td width="30%" style="text-align: left; padding-left:100px; border: 1px solid black;">
                                        <span t-field="a.product_id"/>
                                    </td>
                                    <td width="30%" style="text-align: left; padding-left:100px; border: 1px solid black;">
                                        <span t-field="a.product_qty"/>
                                    </td>
                                    <td width="30%" style="text-align: left; padding-left:100px; border: 1px solid black;">
                                        <span t-field="a.price_unit"/>
                                    </td>
                                </tr>
                                <tr align="right">
                            <!-- <tr style="border-top: none; text-align:center;" cellpadding="0" cellspacing> -->
                            
                            <td colspan="2" style="float: right; border: none;"></td>
                             <td colspan="1" style="border: 1px solid black;">
                             <div style="text-align: right;">
                                Total:
                            </div>
                            </td>
                            <td colspan="1" style="border: 1px solid black;">
                             <div style="text-align: right;">
                                <span t-field="property.amount_total"/>
                            </div>
                            </td>
                            </tr>

                        </tbody>
                        </table>      
                        </div>            
                </t>
            </t>
        </t>
    </template>
</odoo>