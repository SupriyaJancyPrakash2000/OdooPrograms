<odoo>
<template id="purchase_order_custom_report">
        <t t-set="company" t-value="user.company_id"/>

        <div class="header">
            <div class="row" style="font-family:'Trebuchet Ms', sans-serif;">
                <!-- <div class="col-5 mb4"> -->
                    <!-- <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields":["address", "name"], "no_marker": true}'/>
                </div> -->
                <div class="col-2 mb4" style='margin-left:250px'>
                    <img t-if="company.logo"  t-att-src="image_data_uri(company.logo)" style="max-height:80px;" alt="Logo"/>
                </div>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"></div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4 text-nowrap">
                    <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span class="o_force_ltr" t-field="company.phone"></span></li>
                    <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"></span></li>
                    <li t-if="company.website" class="list-inline-item d-inline">Website: <span t-field="company.website"></span></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"></t></li>
                </ul>
            </div>
        </div>
        
    </template>
</odoo>